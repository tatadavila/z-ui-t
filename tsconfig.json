{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true, //Turning on esModuleInterop will fix both of these problems in the code transpiled by TypeScript
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": false,
        "jsx": "react-jsx",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noEmit": true,
        "outDir": "build",
        "paths": {
            "~/*": ["src/*"]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es2016",
        "useDefineForClassFields": true
    },
    "exclude": ["node_modules"],
    "include": ["src", "**/*.ts", "**/*.tsx"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
